% shell, script, map

# Declare map
declare -A map=([john]=75 [doe]=82 [ann]=83 [ava]=72)

# Loop from map
declare -A map=([john]=75 [doe]=82 [ann]=83 [ava]=72)
for key in "${!map[@]}"; do
    echo "${key}: ${map[${key}]}"
done

# Append elements to map
declare -a map
map+=(1 2 3)
map+=(4 5 6)

# Remove element from map
unset "map[${i}]"


% shell, script, loop

# Loop numerical
for i in {<start>..<end>..<step>}; do
  echo $i
done

# Loop from array using for loop
inputs=('foo' 'bar')
for i in ${inputs[@]}; do
  echo $i
done

# Loop from array using for loop
for (( i=0; i<${#arr[@]}; i++ )); do
  echo "${arr[$i]}"
done

# Loop from array using for while loop
i=0
while [ $i -lt ${#arr[@]} ]; do
  echo "${arr[$i]}"
  i="$((i + 1)"
done

# Loop from array using for while loop
i=0
while (( $i < ${#arr[@]} )); do
  echo "${arr[$i]}"
  i="$((i + 1)"
done

# Change file extensions
for i in *.<source_extension>; do
  mv $i ${i//<source_extension>/<target_extension>}
done

# For loop continue
for i in [series]; do
  command 1
  command 2
  if [ condition ]; then
    continue # skip to the next value in "series"
  fi
  command 3
done

# For loop break
for i in [series]; do
  command 4
  if [ condition ]; then
    command 5 # Command if the loop needs to be broken
    break
  fi
  command 6 # Command to run if the "condition" is never true
done

# Execute command until condition is true
i=5
until [[ i -eq 10 ]]; do
  echo "i=$i"
  i="$((i+1))"
done

